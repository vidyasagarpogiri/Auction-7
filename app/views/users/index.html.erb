<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <!--<td><%= gravatar_for user %></td>-->
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <% if signed_in? && current_user.admin %>
          <td><%= link_to "Delete", user, method: 'delete', data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
